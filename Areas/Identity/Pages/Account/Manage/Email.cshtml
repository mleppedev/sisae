@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]
@model EmailModel
@{
    ViewData["Title"] = "Gestionar Correo Electrónico";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 text-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">@ViewData["Title"]</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <form method="post" class="p-4 border rounded bg-light">
                <!-- Mensaje de estado -->
                @if (!string.IsNullOrEmpty(Model.StatusMessage))
                {
                    <div class="alert alert-success">@Model.StatusMessage</div>
                }

                <!-- Validación de errores -->
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Campo: Correo Electrónico -->
                <div class="form-floating mb-3">
                    <input asp-for="Input.NewEmail" class="form-control" />
                    <label asp-for="Input.NewEmail">Nuevo Correo Electrónico</label>
                    <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                </div>

                <!-- Botón Guardar -->
                <button type="submit" class="btn btn-primary w-100">Guardar Cambios</button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
