@page
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Administrador, Encargado")]
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Eliminar Datos Personales";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12 text-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2">@ViewData["Title"]</h1>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="alert alert-warning" role="alert">
                <p>
                    <strong>Eliminar estos datos eliminará permanentemente tu cuenta, y esto no se puede recuperar.</strong>
                </p>
            </div>
            <div class="p-4 border rounded bg-light">
                <form id="delete-user" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    @if (Model.RequirePassword)
                    {
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Por favor, ingrese su contraseña." />
                            <label asp-for="Input.Password" class="form-label">Contraseña</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    }
                    <button class="btn btn-danger w-100" type="submit">Eliminar datos y cerrar mi cuenta</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
