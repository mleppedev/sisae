@page "{id:int}"
@model sisae.Pages.AccesosProhibidos.DeleteModel
@{
    ViewData["Title"] = "Eliminar Acceso Prohibido";
}

<h2>Eliminar Acceso Prohibido</h2>

<h3>¿Estás seguro que deseas eliminar este acceso prohibido?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">Visitante</dt>
        <dd class="col-sm-10">@Model.AccesoProhibido.Visitante.Nombre @Model.AccesoProhibido.Visitante.Apellido</dd>
        <dt class="col-sm-2">Fecha de Prohibición</dt>
        <dd class="col-sm-10">@Model.AccesoProhibido.Fecha_Prohibicion.ToShortDateString()</dd>
        <dt class="col-sm-2">Fecha de Expiración</dt>
        <dd class="col-sm-10">@Model.AccesoProhibido.Fecha_Expiracion?.ToShortDateString()</dd>
        <dt class="col-sm-2">Motivo</dt>
        <dd class="col-sm-10">@Model.AccesoProhibido.Motivo</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="AccesoProhibido.ID_Acceso_Prohibido" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
